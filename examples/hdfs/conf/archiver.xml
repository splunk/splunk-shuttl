<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ns2:archiverConf xmlns:ns2="com.splunk.shuttl.server.model">
   <localArchiverDir>file:/~/MyTestArea/shuttl_archiver</localArchiverDir>
    <!-- Supported values for backend: local, hdfs, s3, s3n or glacier -->
    <backendName>hdfs</backendName>
    <!-- Path on the backend where Shuttl will store data -->
    <archivePath>/user/testUser/MyTestArea</archivePath>

    <!-- Unique name for your Splunk cluster -- >
    <clusterName>hdfs-cluster</clusterName>
    <!-- Specify your node's name -->
    <serverName>Node-001</serverName>
  <archiveFormats>
    <archiveFormat>SPLUNK_BUCKET</archiveFormat>
    <archiveFormat>CSV</archiveFormat>
  </archiveFormats>
</ns2:archiverConf>
